{
  "version": 2,
  "builds": [
    {
      "src": "apps/frontend/next.config.mjs",
      "use": "@vercel/next"
    },
    {
      "src": "apps/backend/src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/backend/src/main.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/frontend/$1"
    }
  ]
}
